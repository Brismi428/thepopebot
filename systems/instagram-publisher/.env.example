# Instagram Publisher - Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to Git

# === Required ===

# Instagram Graph API Access Token
# Get from: https://developers.facebook.com/tools/explorer/
# Permissions required: instagram_content_publish
# For production, use a long-lived token (60 days)
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token_here

# Instagram Business Account ID (numeric)
# Get from: curl "https://graph.facebook.com/me/accounts?access_token={token}"
INSTAGRAM_BUSINESS_ACCOUNT_ID=17841405309211844

# === Optional ===

# Claude API key for content enrichment (hashtag suggestions, alt text)
# Get from: https://console.anthropic.com/
# Only needed if you enable enrichment
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API key (fallback LLM for enrichment)
# Get from: https://platform.openai.com/
# Only used if ANTHROPIC_API_KEY is not set
OPENAI_API_KEY=your_openai_api_key_here

# Enable content enrichment (default: false)
# Set to "true" to enable AI-generated hashtags and alt text
ENABLE_ENRICHMENT=false

# Firecrawl API key (optional, for advanced web scraping)
# Get from: https://firecrawl.dev/
# Not currently used by the system
FIRECRAWL_API_KEY=your_firecrawl_api_key_here
